.card-container
  background-color #fff
  position relative
  width 47vw
  border-radius 5px
  margin-bottom 5px
  .card-pic 
    width 100%
    .headPic 
      border-top-left-radius 5px
      border-top-right-radius 5px
      width 100%
    .isVideo
      position absolute
      width 20px
      height 20px
      top 12px
      right 12px
  .card-bottom
    width 100%
    box-sizing border-box
    padding 10px 8px 10px 8px
    .title
      font-weight 500
      font-size 13px
      word-wrap break-word
      line-height 1.2
      margin-bottom 8px
    .bottom
      display flex
      justify-content flex-start
      align-items center
      .avatar
        width 25px
        height 25px
        margin-right 5px
        img 
          border-radius 50%
          width 100%
          height 100%
      .name
        color rgba(0,0,0,0.6)
        font-size 11px
      .star
        position absolute
        right 10px
        color #666666
        font-size 13px
        img 
          width 16px
          height 16px
          vertical-align middle
          margin-right 5px


    
