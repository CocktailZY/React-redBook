.card-container
  background-color #fff
  position relative
  width 47vw
  border-radius 5px
  margin-bottom 5px
  .card-pic 
    width 100%
    .headPic 
      border-top-left-radius 5px
      border-top-right-radius 5px
      width 100%
    .isVideo
      position absolute
      width 20px
      height 20px
      top 12px
      right 12px
  .card-bottom
    width 100%
    box-sizing border-box
    padding 10px 8px 10px 8px
    .title-con
      position relative
      font-size 13px
      font-weight 500
      line-height 1.2
      min-height 20px
      .title
        word-break: break-all;
        text-overflow: ellipsis;
        display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
        -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
        -webkit-line-clamp: 2; /** 显示的行数 **/
        overflow: hidden;  /** 隐藏超出的内容 **/
    .bottom
      display flex
      justify-content flex-start
      align-items center
      margin-top 5px
      .avatar
        width 25px
        height 25px
        margin-right 5px
        img 
          border-radius 50%
          width 100%
          height 100%
      .name
        color rgba(0,0,0,0.6)
        font-size 11px
      .star
        position absolute
        right 10px
        color #666666
        font-size 13px
        img 
          width 16px
          height 16px
          vertical-align middle
          margin-right 5px


    
