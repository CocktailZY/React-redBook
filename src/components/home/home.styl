.header
  padding-top 28px
  width 100%
  height 60px
  .button
    position absolute
    top 22px
    left 10px
    width 28px
    height 28px
  .tab-item
    font-size 14px
    display flex
    justify-content center
    align-items center
    margin-bottom 14px
  .two
    margin-left 30px
    margin-right 30px
  .nav-link
    position relative
    .selected
      color #000000
      &:before
        content ''
        width 24px
        height 2px
        background-color red
        position absolute
        top 18px
        left 2px
  .search-nav
    border-radius 13px 
    height 25px
    width 90%
    margin auto
    background-color rgba(0,0,0,0.1)
    line-height 25px
    display flex
    justify-content center
    align-items center
    span 
      font-size 13px
      color rgba(0,0,0,0.6)
    .search-icon
      width 15px
      height 15px
      margin-right 5px

        

        
      