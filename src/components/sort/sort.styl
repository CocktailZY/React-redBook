.sort-container
  width 100%
  height 100%
  .sort-header
    position relative
    width 100%
    height 40px
    background-color #fff
    text-align center
    line-height 40px
    font-size: 15px
    border-bottom: 1px solid rgba(0,0,0,0.1)
    img 
      width 20px
      height 30px
      position absolute
      top 4px
      left 15px
  .sort-sidebar
    font-size: 12px
    box-sizing: border-box
    width 80px
    height calc(100% - 40px)
    background-color #fff
    position fixed
    top 40px
    left 0
    white-space: wrap;
    .sort-sidebar__item
      width 100%
      height 6.6667%
      display: flex
      align-items: center
      justify-content: center
      background-color #fff
    .Active
      background-color #f4f9f8
