.sort-container
  width 100%
  height 100%
  .sort-header
    position relative
    width 100%
    height 40px
    background-color #fff
    text-align center
    line-height 40px
    font-size: 15px
    border-bottom: 1px solid rgba(0,0,0,0.1)
    img 
      width 20px
      height 30px
      position absolute
      top 4px
      left 15px
  .sort-sidebar
    width 80px
    height calc(100% - 40px)
    background-color #fff
    position fixed
    top 40px
    left 0
